  "devDependencies": {
    "@nx/js": "18.0.5",
    "esbuild": "^0.19.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^14.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nx": "18.0.5",
    "prettier": "^3.2.5",
    "verdaccio": "^5.0.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
